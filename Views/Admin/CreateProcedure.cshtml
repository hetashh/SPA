@model SPA.Models.Procedure

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить процедуру";
}

<div class="container mt-4">
    <h2>Добавить процедуру</h2>

    <form asp-action="CreateProcedure" method="post" class="procedure-form">
        <div class="form-group">
            <label for="Name">Название</label>
            <input asp-for="Name" class="form-control form-control-lg" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Описание</label>
            <textarea asp-for="Description" class="form-control form-control-lg" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Price">Цена</label>
            <input asp-for="Price" class="form-control form-control-lg" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Добавить</button>
    </form>
</div>