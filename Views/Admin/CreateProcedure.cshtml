@model SPA.Models.Procedure

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить процедуру";
}

<h2>Добавить процедуру</h2>

<form asp-action="CreateProcedure" method="post">
    <div class="form-group">
        <label>Название</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label>Описание</label>
        <textarea name="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input type="number" name="Price" class="form-control" value="@Model.Price" step="0.01" required />
    </div>
    <button type="submit" class="btn">Добавить</button>
</form>
